<div class="container">
  <div class="row">
    <p>Site Name</p>

    <div>
      <%= link_to 'All', root_path, class: "btn btn-primary" %>
      <% @categories.each do |category| %>  
        <%= link_to category.name %>
      <% end %>
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <td>Replies count</td>
          <td>Title</td>
          <td>Last replied at</td>
          <td>Viewd count</td>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
          <tr>        
            <td>
              replies count
            </td>
            <td> <%= post.title %> </td>
            <td> time </td>
            <td> view </td>
          </tr>  
        <% end %>
      </tbody>
      
    </table>

    <div>
      
    </div>

  </div>
</div>