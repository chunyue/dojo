<div class="container">
  <div class="row">

    <div>
      <%= link_to 'Category List', admin_categories_path %>
      |
      <%= link_to 'User List' %>
    </div>

    <div class="form-inline">
      <%= form_for [:admin, @category] do |f| %>
      <div class="form-group">
        <%= f.text_field :name, placeholder: "Category Name", class: "form-control" %>
      </div>
      <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
    <% if @category.errors.any? %>
      <%= @category.errors.full_messages.to_sentence %>
    <% end %>

    <div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>#</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |c| %>
        <tr>
          <td> <%= c.name %> </td>
          <td>
            <%= link_to 'Edit', edit_admin_category_path(c) %>
            <%= link_to 'Delete', admin_category_path(c), method: :delete, data:{ confirm: "sure?"}   %>

          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>

  </div>
</div>